{
  "name": "kusama-transfers",
  "private": true,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "rm -rf lib && tsc",
    "processor:start": "node lib/processor.js",
    "query-node:start": "squid-graphql-server --subscriptions --max-response-size 10000",
    "abi:arena": "npx squid-evm-typegen --abi src/abi/battle-arena-abi.json --output src/abi/battle-arena-abi.ts",
    "abi:faucet": "npx squid-evm-typegen --abi src/abi/battle-faucet-abi.json --output src/abi/battle-faucet-abi.ts",
    "abi:staker": "npx squid-evm-typegen --abi src/abi/battle-staker-abi.json --output src/abi/battle-staker-abi.ts",
    "abi:voter": "npx squid-evm-typegen --abi src/abi/battle-voter-abi.json --output src/abi/battle-voter-abi.ts",
    "abi:ve-model": "npx squid-evm-typegen --abi src/abi/ve-model-abi.json --output src/abi/ve-model-abi.ts",
    "abi:erc721": "npx squid-evm-typegen --abi src/abi/erc721.json --output src/abi/erc721.ts",
    "abi:xzoo": "npx squid-evm-typegen --abi src/abi/xZoo.json --output src/abi/xZoo.ts",
    "abi:jackpot": "npx squid-evm-typegen --abi src/abi/jackpot.json --output src/abi/jackpot.ts",
    "codegen": "npx squid-typeorm-codegen",
    "db:drop": "npx squid-typeorm-migration drop",
    "db:revert": "npx squid-typeorm-migration revert",
    "db:create": "npx squid-typeorm-migration create",
    "db:generate": "npx squid-typeorm-migration generate",
    "db:migrate": "npx squid-typeorm-migration apply",
    "logs": "npx sqd squid logs",
    "processor": "node -r dotenv/config lib/processor.js",
    "gql": "npx squid-graphql-server",
    "release": "npx sqd squid:release ZooDAO@v2 --source https://github.com/GarageInc/squid-indexer#master",
    "deploy-prod": "npx sqd squid:prod ZooDAO@v2"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.6.1",
    "@subsquid/archive-registry": "1.0.15",
    "@subsquid/cli": "0.7.4",
    "@subsquid/evm-typegen": "1.3.1",
    "@subsquid/graphql-server": "3.2.3",
    "@subsquid/ss58": "0.1.2",
    "@subsquid/substrate-processor": "2.0.1",
    "@subsquid/typeorm-migration": "0.1.3",
    "@subsquid/typeorm-store": "0.1.5",
    "dotenv": "^16.0.0",
    "ethers": "^5.6.4",
    "pg": "^8.7.3",
    "typeorm": "^0.3.6"
  },
  "devDependencies": {
    "@subsquid/substrate-metadata-explorer": "1.0.8",
    "@subsquid/substrate-typegen": "1.5.0",
    "@subsquid/typeorm-codegen": "0.2.3",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-type-graphql": "^0.3.2",
    "prettier": "^2.7.1",
    "typescript": "~4.6.2"
  }
}
