{
  "name": "kusama-transfers",
  "private": true,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "rm -rf lib && tsc",
    "update": "npx npm-check-updates --filter /subsquid/ --upgrade && npm i -f",
    "processor:start": "node lib/processor.js",
    "query-node:start": "squid-graphql-server  --subscriptions --max-response-size 10000 --dumb-cache in-memory --dumb-cache-ttl 1000 --dumb-cache-size 100 --dumb-cache-max-age 1000",
    "abi:arena": "npx squid-evm-typegen src/abi/generated src/abi/battle-arena-abi.json",
    "abi:staker": "npx squid-evm-typegen src/abi/generated src/abi/battle-staker-abi.json",
    "abi:voter": "npx squid-evm-typegen src/abi/generated src/abi/battle-voter-abi.json",
    "abi:erc20": "npx squid-evm-typegen src/abi/generated src/abi/erc20.json",
    "abi:erc721": "npx squid-evm-typegen src/abi/generated src/abi/erc721.json",
    "abi:ve-model": "npx squid-evm-typegen src/abi/generated src/abi/ve-model-abi.json",
    "abi:functions": "npx squid-evm-typegen src/abi/generated src/abi/battle-functions-abi.json",
    "codegen": "npx squid-typeorm-codegen",
    "db:drop": "npx squid-typeorm-migration drop",
    "db:revert": "npx squid-typeorm-migration revert",
    "db:create": "npx squid-typeorm-migration create",
    "db:generate": "npx squid-typeorm-migration generate",
    "db:migrate": "npx squid-typeorm-migration apply",
    "logs": "npx sqd squid logs",
    "processor": "node -r dotenv/config lib/processor.js",
    "gql": "npx squid-graphql-server",
    "release": "npx sqd squid:release zoodao@10 --source https://github.com/GarageInc/squid-indexer#arbitrum",
    "deploy-prod": "sqd deploy ."
  },
  "dependencies": {
    "@subsquid/archive-registry": "3.2.0",
    "@subsquid/cli": "2.4.3",
    "@subsquid/evm-processor": "^1.7.3",
    "@subsquid/evm-typegen": "3.2.1",
    "@subsquid/graphql-server": "4.2.1",
    "@subsquid/ss58": "0.1.4",
    "@subsquid/typeorm-migration": "1.2.1",
    "@subsquid/typeorm-store": "1.2.1",
    "dotenv": "^16.0.0",
    "ethers": "^6.6.5",
    "node-fetch": "2",
    "pg": "^8.7.3",
    "typeorm": "^0.3.6"
  },
  "devDependencies": {
    "@subsquid/substrate-metadata-explorer": "1.1.2",
    "@subsquid/substrate-typegen": "2.2.1",
    "@subsquid/typeorm-codegen": "1.3.1",
    "@types/node": "^17.0.23",
    "@types/node-fetch": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-type-graphql": "^0.3.2",
    "prettier": "^2.7.1",
    "typescript": "4.8.2"
  }
}
