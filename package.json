{
  "name": "kusama-transfers",
  "private": true,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "rm -rf lib && tsc",
    "processor:start": "node lib/processor.js",
    "query-node:start": "squid-graphql-server --subscriptions --max-response-size 10000",
    "abi:arena": "npx squid-evm-typegen --abi src/abi/battle-arena-abi.json --output src/abi/battle-arena-abi.ts",
    "abi:faucet": "npx squid-evm-typegen --abi src/abi/battle-faucet-abi.json --output src/abi/battle-faucet-abi.ts",
    "abi:staker": "npx squid-evm-typegen --abi src/abi/battle-staker-abi.json --output src/abi/battle-staker-abi.ts",
    "abi:ve-model": "npx squid-evm-typegen --abi src/abi/ve-model-abi.json --output src/abi/ve-model-abi.ts",
    "abi:erc721": "npx squid-evm-typegen --abi src/abi/erc721.json --output src/abi/erc721.ts",
    "codegen": "npx squid-typeorm-codegen",
    "db:drop": "npx squid-typeorm-migration drop",
    "db:revert": "npx squid-typeorm-migration revert",
    "db:create": "npx squid-typeorm-migration create",
    "db:generate": "npx squid-typeorm-migration generate",
    "db:migrate": "npx squid-typeorm-migration apply",
    "logs": "npx sqd squid logs",
    "processor": "node -r dotenv/config lib/processor.js",
    "gql": "npx squid-graphql-server"
  },
  "dependencies": {
    "@subsquid/archive-registry": "1.0.14",
    "@subsquid/graphql-server": "3.2.0",
    "@subsquid/ss58": "0.1.2",
    "@subsquid/substrate-evm-processor": "^0.0.6",
    "@subsquid/substrate-processor": "^1.9.1",
    "@subsquid/typeorm-migration": "^0.1.2",
    "@subsquid/typeorm-store": "^0.1.4",
    "dotenv": "^10.0.0",
    "pg": "8.8.0",
    "typeorm": "0.3.9",
    "ethers": "^5.7.1"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@subsquid/cli": "^0.7.1",
    "@subsquid/evm-typegen": "^1.3.0",
    "@subsquid/substrate-metadata-explorer": "^1.0.6",
    "@subsquid/substrate-typegen": "^1.3.0",
    "@subsquid/typeorm-codegen": "^0.2.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-type-graphql": "^0.3.2",
    "prettier": "^2.7.1",
    "typescript": "4.8.2"
  }
}
